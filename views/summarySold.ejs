<!DOCTYPE html>
<html lang="en">
<script	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
	<title><%- title %> </title>
	<head>
	
	
	 <style>
  	div.logo {
    position: fixed;
    top: 50px;
    left: 30px;
}
  </style>
  
  <script>
function openBuy() {
    var list = document.getElementById("buylist");

    if (list.style.display == "none"){
        list.style.display = "block";
    }else{
        list.style.display = "none";
    }
}

function openSell() {
    var list = document.getElementById("selllist");

    if (list.style.display == "none"){
        list.style.display = "block";
    }else{
        list.style.display = "none";
    }
}

function openList() {
    var list = document.getElementById("listslist");

    if (list.style.display == "none"){
        list.style.display = "block";
    }else{
        list.style.display = "none";
    }
}
</script>


	  <meta charset="utf-8"> 
  <meta name="viewport" content="width=device-width, initial-scale=1">
	
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   
   <script src="angularjs/user.js"></script>
  </head>
  

<body ng-app="user" ng-controller="cart">

	
<div class="row" style="margin: 10px;">
	<div class="btn-group">
		<div class="btn-group">
  			<button type="button" class="btn btn-default">Hi <b><%- user%></b>!</button>
 			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
   				<span class="caret"></span>
  			</button>
  			<ul class="dropdown-menu" role="menu">
	    		<li><a href="/myAccount">Account Settings</a></li>
	    		<li><a href="/logout">Sign Out</a></li>
  			</ul>
		</div> <!-- button group 1 -->
		<button type="button"class="btn btn-default" onclick="window.location.href='/sell'">Sell</button>
 	</div><!-- button group 2 -->

	
		<div class="btn-group pull-right" style="width:150px">
			<button type="button"class="btn btn-default" onclick="window.location.href='/summary'">My eBay</button>
			<button type="button"class="btn btn-default" onclick="window.location.href='/cart'">
			
			<span class="glyphicon glyphicon-shopping-cart" style="color:  #FFFFF; font-size: 15px"><span class="badge" style="color: #ffffff; background-color: #e69500; font-size: 10px"><%- cart%></span></span>
			
			</button>
		
		</div><!-- button group pull right -->

</div><!-- row -->

<br><br>

<div class="container">
	<img src="http://localhost:3000/images/summary-ad.jpg" alt="My_Logo">
</div>

<br><br>
<div class="container">
	<p style="color:  #FFFFF; font-size: 22px">My eBay: Bids/Offers</p>
</div>

<div class="container">
	<div class="col-md-2">
	<div class="row">
			<b>Purchase History</b>
		</div>	
		<div class="row">
			<b>Buy</b>
			<button type="button" onclick = "openBuy()" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
  		</div> <!-- row -->
		<ul id="buylist">
		  <li><a href = "/summaryBids">Bids</a></li>
		  <li><a href = "/summaryOrders">Orders</a></li> 
		</ul>	
		
		<div class="row">
			<b>Sell</b>
			<button type="button" onclick = "openSell()" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
  		</div> <!-- row -->
  		
  		<ul id="selllist">
		  <li><a href = "/summarySold">Sold</a></li>
		  <li><a href = "#">Active</a></li> 
		</ul>	
		
		<div class="row">
			<b>Searches you follow</b>
		</div>	
		
		<div class="row">
			<b>Lists</b>
			<button type="button" onclick = "openList()" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
  		</div> <!-- row -->
  		
  		<ul id="listslist">
		  <li><a href = "#">All lists</a></li>
		  <li><a href = "#">Watch list</a></li>
		  <li><a href = "#">Watch list</a></li>
		  <li><a href = "#">Wish list</a></li>
		  <li><a href = "#">Your list</a></li> 
		</ul>	
		
		<div class="row">
			<b>Sellers your follow</b>
		</div>	
			
	</div>	<!-- div col md 2 -->
	
	<div class="col-md-10">
		<% if(display=='0'){ %>
			<div class="row well">
				You do now have any products in sell at the moment.
			</div>

		<% } else { %>
				
				<% for(i in sold) { %>
					<div class="row well">
						 <div class="col-md-4">
					    	<img src="<%= sold[i].image %> " style="width:150px;height:150px" />
					     </div><!-- col md 4 -->
			        
			        	<div class="col-md-8">
			        		<div class="row">
								<div class="col-md-4">
									Item Type:	
								</div>
								<div class="col-md-8">
									<%- sold[i].item_type %>
								</div>
							</div>
							
							<br>
							
							<div class="row">
								<div class="col-md-4">
									Item Description:	
								</div>
								<div class="col-md-8">
									<%- sold[i].description %>
								</div>
							</div>
							
							<br>
							
							<div class="row">
								<div class="col-md-4">
									Item list time:	
								</div>
								<div class="col-md-8">
									<%- sold[i].insert_time %>
								</div>
							</div>
							
							<br>
							
							<div class="row">
								<div class="col-md-4">
									Quantity:	
								</div>
								<div class="col-md-8">
									<%- sold[i].quantity %>
								</div>
							</div>
							
							<br>
							
							<div class="row">
								<div class="col-md-4">
									Sell type:	
								</div>
								<div class="col-md-8">
									<% if(sold[i].bid=='0'){ %>
										Fixed Price
									<% } else { %>
										Auction
									<% } %>
								</div>
							</div>
							
							<br>
							<div class="row">
								<div class="col-md-4">
									<% if(sold[i].bid=='0'){ %>
										Price:	
									<% } else { %>
										Starting Price
									<% } %>
								</div>
								<div class="col-md-8">
									<%- sold[i].itemprice %>
								</div>
							</div>
							
							<br>
							
							<% if(sold[i].bid=='1'){ %>
								<div class="row">
									<div class="col-md-4">
										Bid Status:
									</div>
									<div class="col-md-8">
										<% if(sold[i].bid_status=='0'){ %>
										In Progress	
									<% } else { %>
										Bidding ended
									<% } %>
									</div>
								</div>	
								
								<br>
								
								<div class="row">
									<div class="col-md-4">
										Biding end time:
									</div>
									<div class="col-md-8">
										<%- sold[i].bid_endtime %>
									</div>
								</div>	
									
							<% } %>  <! -- only if bidding product -->
		    			</div> <!-- col md - 8-->
			        	
			        
			        
					</div> <!-- row well -->
				
				<% } %> <! -- for loop sol -->
				
		<% } %> <! -- else for more than 0 items -->
	</div> <!-- col md 10 -->
	
	
	</div> <!-- container -->

</body>
</html>